[EVENTS e_poisoned_spit]
//Poisoned Spit Defense
ON=@GetHit
   REF12=<SRC>
   IF (<MANA> > 15) && (<DISTANCE> > 2) && !(<SRC.FLAGS> & statf_poisoned) && (<SRC> != <UID>)
      MANA -= 15
      TRYSRC <UID> REF12.EFFECT 0,i_fx_fireball,10,16,0,044,4
      TRYSRC <UID> REF12.SPELLEFFECT s_poison,<POISONING>,0//FIXME:resist
      REF12.DAMAGE <R15,25> <DEF.dam_poison> <UID>
      REF12.SOUND snd_spell_poison
      REF12.SYSMESSAGELOC 1070821,<NAME>//"~ spits a poisonous substance at you!"
   ENDIF

[EVENTS e_solen_spit]
//Acidic Spit Defense
ON=@GetHit
   REF12=<SRC>
   IF (<MANA> > 15) && (<DISTANCE> > 2) && (<SRC> != <UID>)
      MANA -= 15
      TRYSRC <UID> REF12.EFFECT 0,i_fx_fireball,10,16,0,044,4
      REF12.DAMAGE <R15,25> <DEF.dam_acidic> <UID>
      REF12.SYSMESSAGELOC 1071966//"The solen's damaged acid sac squirts acid!"
      REF12.SOUND snd_spell_poison
      SERV.NEWITEM i_pool_acid
      NEW.P=<REF12.P>
      NEW.ATTR=attr_decay|attr_move_never
      NEW.TIMER={5 10}
      NEW.LINK=<UID>
   ENDIF

