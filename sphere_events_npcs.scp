[EVENTS e_bleed_attack]
ON=@Hit
   //Bleed attack
   IF (<MANA> >= 25)&&(RAND(10)==1)
      MANA -= 25
      SRC.NEWITEM=i_bleed_timer
      NEW.LINK=<UID>
      SRC.EQUIP <NEW>
   ENDIF

[ITEMDEF i_bleed_timer]
//1060202//"*Bleeding*"
ID=0122a
NAME=bleed timer
TYPE=t_eq_script
LAYER=30
WEIGHT=0
ON=@Create
   ATTR=attr_decay|attr_can_decay
   MORE1=6
ON=@Equip
   ATTR=attr_decay|attr_can_decay
   TIMER=2
ON=@Timer
   IF (<CONT>)
      IF !(<CONT.HITS>)
         MORE1=0
      ELSE
         MORE1 -= 1
      ENDIF
      DOSWITCH <MORE1>
         BEGIN // MORE1=0
            CONT.SYSMESSAGELOC 1060167//"The bleeding wounds have healed, you are no longer bleeding!"
            REMOVE
         END
         BEGIN // MORE1=1
            CONT.EMOTE bleed slowly
            CONT.DAMAGE {1 2} <DEF.dam_god> <LINK>
            TIMER=2
         END
         BEGIN // MORE1=2
            CONT.EMOTE bleed slowly
            CONT.DAMAGE {2 4} <DEF.dam_god> <LINK>
            TIMER=2
         END
         BEGIN // MORE1=3
            CONT.EMOTE bleed moderately
            CONT.DAMAGE {3 6} <DEF.dam_god> <LINK>
            TIMER=2
         END
         BEGIN // MORE1=4
            CONT.EMOTE bleed heavily
            CONT.DAMAGE {4 9} <DEF.dam_god> <LINK>
            TIMER=2
         END
         BEGIN // MORE1=5
            CONT.EMOTE bleed profusely
            CONT.DAMAGE {5 12} <DEF.dam_god> <LINK>
            TIMER=2
         END
      ENDDO
   ENDIF
   RETURN 1

