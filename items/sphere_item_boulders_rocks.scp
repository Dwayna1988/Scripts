[FUNCTION f_creategeode]
   NAME=Quartz Geode
   COLOR=<R2501,2644>
   IF (<R100>==1)
      DORAND 10
         BEGIN
          NAME=Calcite Geode
          NAME=Agate Geode
          NAME=Smithsonite Geode
          NAME=Amethyst Geode
          NAME=Chalcedony Geode
          NAME=Sphalerite Geode
          NAME=Millerite Geode
          NAME=Barite Geode
          NAME=Dolomite Geode
          NAME=Limonite Geode
         END
         COLOR=<R2651,2662>
      ENDDO
   ENDIF

[TYPEDEF t_geode]
ON=@Damage
   IF (<TOPOBJ.UID>!=<SRC>) && !(<SRC.ISGM>)
      SRC.SYSMESSAGELOC color_text,1042001//"That must be in your backpack for you to use it."
      RETURN 1
   ENDIF
   FOR 4
      SERV.NEWITEM=i_geode_shard
      NEW.COLOR=<COLOR>
      NEW.CONT=<SRC>
   ENDFOR
   REMOVE

