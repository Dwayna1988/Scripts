[ITEMDEF i_bodypaint]
ID=i_palette
TYPE=t_normal
NAME=savage body paint
VALUE=1000
RESOURCES=1 i_reag_spider_silk, 1 i_dye_tub, 3 i_brush, 1 i_log, 3 i_dyes, 1 i_ink_well
SKILLMAKE=TINKERING 10.0, t_tinker_tools, ALCHEMY 10.0
CATEGORY=Magic
SUBSECTION=Tools
DESCRIPTION=Bodypaint
ON=@Create
   COLOR=0447
ON=@Click
   MESSAGE=<NAME>
   SRC.SYSMESSAGE Double click to paint your skin to a random color.
   RETURN 1
ON=@DClick
   IF (<SRC.RESTEST 1 i_bodypaint>) && (<SRC.COLOR>==<SRC.OSKIN>)
      //pull up color picker here... or make random with colors_all
      //SRC.OSKIN=<COLOR> uncomment this to make change permenant
      SRC.COLOR=colors_all
      SERV.NEWITEM=i_paint_timer
      NEW.EQUIP
      REMOVE
      RETURN 1
   ELSEIF (<SRC.COLOR>!=<SRC.OSKIN>)
      SRC.SYSMESSAGE You are already covered with paint.
      RETURN 1
   ELSE
      SRC.SYSMESSAGE You must have this in your backpack to use.
      RETURN 1
   ENDIF

[ITEMDEF i_paint_timer]
